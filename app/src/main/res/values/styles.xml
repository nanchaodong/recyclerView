<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="common_margin">
        <item name="android:layout_marginRight">@dimen/d5</item>
        <item name="android:layout_marginLeft">@dimen/d5</item>
    </style>

    <style name="school_subject_item">
        <item name="android:layout_marginRight">@dimen/d20</item>
        <item name="android:layout_marginLeft">@dimen/d20</item>
        <item name="android:layout_marginTop">@dimen/d10</item>
        <item name="android:layout_marginBottom">@dimen/d10</item>
    </style>

    <style name="text_edit_style">
        <item name="android:layout_height">@dimen/d47</item>
        <item name="android:layout_width">@dimen/d47</item>
        <item name="android:background">@mipmap/bg_verify</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/common_blue_0090FF</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="common_text_size_color">
        <item name="android:textColor">@color/common_text_676767</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="common_bottom_text_size_color">
        <item name="android:textColor">@color/common_text_a9b7b7</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
