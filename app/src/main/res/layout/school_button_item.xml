<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="schoolButtonList"
            type="com.wolf.recyclerview.bean.SchoolButtonList"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0f0f0">

        <LinearLayout
            style="@style/school_subject_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_back_g"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/d0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/d10">

                <ImageView
                    android:layout_width="@dimen/d40"
                    android:layout_height="@dimen/d40"
                    android:scaleType="fitXY"
                    app:imageId="@{schoolButtonList.schoolButtonList[0].drawbleId}"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d10"
                    android:text="@{schoolButtonList.schoolButtonList[0].text}"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/d0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/d10">

                <ImageView
                    android:layout_width="@dimen/d40"
                    android:layout_height="@dimen/d40"
                    android:scaleType="fitXY"
                    app:imageId="@{schoolButtonList.schoolButtonList[1].drawbleId}"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d10"
                    android:text="@{schoolButtonList.schoolButtonList[1].text}"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/d0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/d10">

                <ImageView
                    android:layout_width="@dimen/d40"
                    android:layout_height="@dimen/d40"
                    android:scaleType="fitXY"
                    app:imageId="@{schoolButtonList.schoolButtonList[2].drawbleId}"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d10"
                    android:text="@{schoolButtonList.schoolButtonList[2].text}"/>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</layout>